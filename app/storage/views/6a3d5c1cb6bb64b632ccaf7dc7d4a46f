	<script type="text/javascript">
	$(document).ready(function() {
		
		// delete a student
		$('.deleteBtn').click(function() {
			var deleteUserId = $(this).attr('deleteUserId');
			var url = "<?php echo URL::route('admin.students'); ?>";
			$(".deleteForm").attr("action", url+'/'+deleteUserId);
		});

	});
	</script>

