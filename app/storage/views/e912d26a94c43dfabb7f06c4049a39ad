					</div>
					<div class="row">
				<?php endif; ?>
					<a href="<?php echo URL::route('students.show', array('year'=>$batch->year, 'reg' => $students[$i]->reg)); ?>">
						<div class="col-md-4">
							<div class="thumbnail text-center">
								<?php echo Helper::currentPicture($students[$i]); ?>
								<div class="caption">
									<h4><?php echo $students[$i]->user->full_name; ?></h4>
									<p><?php echo $students[$i]->reg; ?></p>
								</div>
							</div>
						</div>
					</a>
